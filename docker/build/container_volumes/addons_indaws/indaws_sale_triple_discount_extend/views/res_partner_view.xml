<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record model="ir.ui.view" id="res_partner_triple_discount_form_view">
        <field name="name">res.partner.triple.discount.form.view</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[last()]" position="after">
                <page string="Descuentos Familias">
                    <field name="product_pricelist_customer_ids">
                        <tree editable="bottom">
                            <field name="category_id"/>
                            <field name="discount"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>