{
    "git.enabled": true,
    "git.autoRepositoryDetection": "subFolders",
    "python.defaultInterpreterPath": "python3.7",
    "editor.multiCursorModifier": "alt",
    "files.exclude": {
        "**/*.pyc": true,
        "**/__pycache__/": true
    },
    "workbench.colorCustomizations": {
    "tab.activeBackground": "#3200c7",
    "editorWhitespace.foreground": "#16f80264",
    "editor.renderWhitespace": "all"
    },
    "editor.renderWhitespace": "all",
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "flake8.args": [
        "--max-line-length=250",
        "--ignore=E302,W191,E250,E251,E101,E731,E303,W605,E722"
    ]
}
